{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@entities/*":[
        "entities/*"
      ],
      "@repositories/*":[
        "repositories/*"
      ],
      "@providers/*":[
        "providers/*"
      ],
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}
